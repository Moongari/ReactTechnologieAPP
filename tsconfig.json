{
    "compilerOptions": {
      "target": "es5", // version ecma 5 version 5 de typeScript
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react" // on indique a typeScript que nous allons utilser typeScript a notre code
    },
    "include": [
      "src"
    ]
  }